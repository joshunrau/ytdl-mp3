{
  "name": "ytdl-mp3",
  "version": "3.1.0",
  "description": "A NodeJS package and command-line tool for downloading music from YouTube, including automatic retrieval of ID3 tags and album art via iTunes.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ytdl-mp3": "./bin/ytdl-mp3"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsup",
    "cli": "node ./bin/ytdl-mp3",
    "dev": "tsup --watch",
    "format": "prettier --write ./src/",
    "lint": "eslint --fix --ext .ts ./src/",
    "prepare": "husky install",
    "preversion": "yarn lint && yarn format",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshunrau/ytdl-mp3.git"
  },
  "author": "Joshua Unrau",
  "license": "MIT",
  "keywords": [
    "youtube",
    "download",
    "mp3",
    "music"
  ],
  "bugs": {
    "url": "https://github.com/joshunrau/ytdl-mp3/issues"
  },
  "homepage": "https://github.com/joshunrau/ytdl-mp3#readme",
  "dependencies": {
    "axios": "^1.2.4",
    "commander": "^10.0.0",
    "ffmpeg-static": "^5.1.0",
    "node-id3": "^0.2.5",
    "ytdl-core": "4.11.4"
  },
  "devDependencies": {
    "@joshunrau/eslint-config": "^2.1.1",
    "@types/ffmpeg-static": "^3.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.3",
    "prettier": "2.8.8",
    "tsup": "^6.6.2",
    "typescript": "^5.0.2"
  },
  "files": [
    "bin",
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ]
}
